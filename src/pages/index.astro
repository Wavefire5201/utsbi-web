---
import "@/styles/globals.css";
import Image from "astro/components/Image.astro";
import Layout from "../layouts/Layout.astro";
import background from "@/assets/images/background.png";
import group from "@/assets/images/group.jpg";
---

<Layout title="Home">
  <!-- Front page -->
  <section>
    <div class="relative inline-block">
      <div
        class="overlay-text absolute text-white text-left font-OldStandardTT -translate-x-1/2 -translate-y-1/2 animate-title"
      >
        <div class="text-7xl">
          <span class="text-green-500">S</span>ustainable
        </div>
        <div class="text-7xl">
          <span class="text-green-500">B</span>uilding
        </div>
        <div class="text-7xl">
          <span class="text-green-500">I</span>nitiative
        </div>
        <div class="pl-1 text-lg">
          Research-Driven, Professionally Inspired, and Student-Powered
        </div>
        <div class="pl-1 pt-6">
          <a
            href="https://docs.google.com/forms/d/e/1FAIpQLSfydaV7PUR4yvqQoVT73bbDsSJ1vzKCVlslrE6UGVi3yEKIVA/viewform"
          >
            <button
              class="bg-green-500 hover:bg-transparent text-white-700 hover:text-white transition duration-300 pt-3 pb-2 px-6 border border-green-500 hover:border-green-500 rounded"
            >
              Join Us
            </button>
          </a>
          <a href="/about">
            <button
              class="bg-transparent hover:bg-green-500 text-white-700 hover:text-white transition duration-300 pt-3 pb-2 px-6 border border-green-500 hover:border-transparent rounded"
            >
              What We're About
            </button>
          </a>
        </div>
      </div>
      <Image
        src={background}
        loading={"eager"}
        alt="Background"
        class="block object-cover h-screen"
      />
    </div>
  </section>
  <!-- Mission Statement -->
  <section class="px-96 pt-10">
    <div class="font-OldStandardTT">
      <div class="text-3xl">Our Mission Statement</div>
      <div class="pt-2 italic">
        “We aim to spread the idea of sustainable infrastructure and team
        collaboration into the upcoming generations to all types of schools — no
        matter their financial status. We host workshops and events to get
        students together to create a future where all types of engineers will
        have to solve everyday problems in a sustainable way.”
      </div>
    </div>
    <hr class="h-px my-8 bg-gray-200 border-0" />
  </section>
  <!-- Call to action -->
  <section class="px-96 py-5 relative">
    <div class="flex justify-center items-center">
      <div
        class="absolute inset-0 flex flex-col justify-center items-center text-white font-OldStandardTT z-10"
      >
        <div class="text-4xl pb-3">Join Our Team</div>
        <div class="text-xl text-center px-4">
          Your Journey to Sustainable Impact Begins Here - <span class="italic"
            >Learn, Build, Lead</span
          >.
        </div>
        <div class="pt-8">
          <a
            href="https://docs.google.com/forms/d/e/1FAIpQLSfydaV7PUR4yvqQoVT73bbDsSJ1vzKCVlslrE6UGVi3yEKIVA/viewform"
          >
            <button
              class="bg-green-500 hover:bg-transparent text-white-700 hover:text-white transition duration-300 text-xl pt-4 pb-3 px-6 border border-green-500 hover:border-green-500 rounded"
            >
              Apply Now
            </button>
          </a>
        </div>
      </div>
      <Image
        src={group}
        loading={"lazy"}
        alt="Professional group"
        class="rounded-xl object-cover brightness-50"
      />
    </div>
  </section>
</Layout>

<style>
  .overlay-text {
    top: 50%;
    left: 40%;
  }

  .animate-title > div {
    opacity: 0;
    animation: fadeInUp 2s ease forwards;
  }

  .animate-title > div:nth-child(1) {
    animation-delay: 0.1s;
  }

  .animate-title > div:nth-child(2) {
    animation-delay: 0.3s;
  }

  .animate-title > div:nth-child(3) {
    animation-delay: 0.5s;
  }

  .animate-title > div:nth-child(4) {
    animation-delay: 0.7s;
  }

  .animate-title > div:nth-child(5) {
    animation-delay: 0.9s;
  }

  @keyframes fadeInUp {
    0% {
      opacity: 0;
      transform: translateY(20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
